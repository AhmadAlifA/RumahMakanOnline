<form asp-action="index">
    <div class="form-group">
        <label for="NameProduct" class="form-label">Product Name</label>
        <input type="text" name="searchString" value="@ViewBag.CurrentFilter" class="form-control float-right" placeholder="Search">
    </div>


    <div class="row">
        <div class="col-6">

            <div class="form-group">
                <label for="MinPrice" class="form-label">Min Price</label>
                <input type="number" name="MinPrice" value="@ViewBag.filterMinPrice" class="form-control float-right" id="MinPrice" placeholder="MinPrice">
            </div>
        </div>

        <div class="col-6">
            <div class="form-group">
                <label for="MaxPrice" class="form-label">Max Price</label>
                <input type="number" name="MaxPrice" value="@ViewBag.filterMaxPrice" class="form-control float-right" id="MaxPrice" placeholder="MaxPrice">
            </div>
        </div>
    </div>
    <div class="card-footer clearfix">
        <button data-dismiss="modal" class="btn btn-light">Cancel</button>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>